<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/iconoApp"
        android:layout_width="63dp"
        android:layout_height="87dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:id="@+id/notification_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tituloNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Reserva de Donación"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="bottom">

            <TextView
                android:id="@+id/detalleNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="20 kg Pollo"
                android:textColor="#000000"
                android:textSize="5sp"
                android:layout_marginEnd="10dp" />

            <!-- Otra información (Reserva) -->
            <TextView
                android:id="@+id/reservaNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="20 kg Pollo"
                android:textColor="#000000"
                android:textSize="5sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
