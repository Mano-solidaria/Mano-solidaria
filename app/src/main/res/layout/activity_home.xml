<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context="com.mano_solidaria.app.ui.login.LoginActivity">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:layout_marginBottom="20dp"
      app:layout_constraintBottom_toTopOf="@+id/email_label"
      android:gravity="center"
      android:textSize="50sp"
      android:text="Bienvenido" />

  <TextView
      android:id="@+id/email_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:layout_marginHorizontal="60dp"
      app:layout_constraintBottom_toTopOf="@+id/emailTextView"
      android:layout_marginBottom="15dp"
      android:textSize="20sp"
      android:text="Email" />

  <TextView
      android:id="@+id/emailTextView"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:textColorHint="@color/black"
      android:textSize="30sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="200dp"
      android:layout_marginHorizontal="60dp"
      android:inputType="text"
      tools:hint="Email" />

  <TextView
      android:id="@+id/password_label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:layout_marginHorizontal="60dp"
      app:layout_constraintTop_toBottomOf="@+id/emailTextView"
      android:layout_marginTop="20dp"
      android:textSize="20sp"
      android:text="Tipo Logueo" />

  <TextView
      android:id="@+id/passwordTextView"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:textColorHint="@color/black"
      android:textSize="30sp"
      app:layout_constraintTop_toBottomOf="@+id/password_label"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginHorizontal="60dp"
      android:layout_marginTop="15dp"
      android:inputType="text"
      android:textColor="#000"
      tools:hint="Contrase침a" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="80dp"
      android:orientation="vertical"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@+id/passwordTextView"
      android:gravity="center">

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesi칩n" />

    <!-- Bot칩n "Siguiente" agregado debajo de "Cerrar sesi칩n" -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Siguiente" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
