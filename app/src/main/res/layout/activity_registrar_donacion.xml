<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- Formulario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Alimento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alimento:" />
        <EditText
            android:id="@+id/alimentoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el alimento"
            android:minHeight="48dp"
            android:inputType="text" />

        <!-- Peso -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso (Kg):" />
        <EditText
            android:id="@+id/pesoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el peso"
            android:minHeight="48dp"
            android:inputType="numberDecimal" />

        <!-- Duración -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duración (días):" />
        <EditText
            android:id="@+id/duracionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese la duración"
            android:minHeight="48dp"
            android:inputType="number" />

        <!-- Información adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información adicional:" />
        <EditText
            android:id="@+id/infoAdicionalEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese más información"
            android:inputType="textMultiLine"
            android:lines="4" />

    </LinearLayout>

    <!-- Botón Elegir Foto -->
    <Button
        android:id="@+id/btnElegirFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir Foto" />

    <!-- Espacio para mostrar la foto -->
    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Espacio para mostrar la foto" />

    <!-- Botón Registrar -->
    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar" />
</LinearLayout>
