<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/propuesta_list_fragment">

    <fragment
        android:id="@+id/propuesta_list_fragment"
        android:name="com.mano_solidaria.app.ui.donante.PropuestaListFragment"
        android:label="PropuestaListFragment">
        <action
            android:id="@+id/show_propuesta_detail"
            app:destination="@id/propuesta_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/propuesta_detail_fragment"
        android:name="com.mano_solidaria.app.ui.donante.PropuestaDetailFragment"
        android:label="propuesta_detail"
        tools:layout="@layout/fragment_propuesta_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>